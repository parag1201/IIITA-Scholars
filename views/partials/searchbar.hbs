<searchbar>
    <section class="search-bar">
        <div class="dark-overlay">
            <form action="/publications/search" method="get">
                <input placeholder="Enter keywords" name="query">
                <select class="search-type" name="search-options" id="search-options">
                    <option selected disabled>Search By</option>
                    <option>Faculty</option>
                    <option>Year</option>
                    <option>Name</option>
                </select>
                <a href="http://localhost:4000/profiles"><button class="btn btn-primary search-link" type="submit">Search</button></a>
            </form>
        </div>
    </section>
    <div class="container search-result-display article-list">
        {{#each papers as |paper|}}
        <div class="paper-card">
            <div class="title">
                <a href={{paper.publicationLink}} target="_blank">{{paper.title}}</a>
            </div>
            <div class="other-info">
                <div class="authors">
                    <p>Authors: </p>
                    {{#each paper.authors as |author|}}
                        <p>{{author}}</p>
                    {{/each}}
                </div>
                <div class="year">
                    <p>{{paper.year}}</p>
                </div>
            </div>
            <div class="tags">
                {{#each paper.keywords as |tag|}}
                    <a class="tag" href="/publications/search?tag={{tag}}">{{tag}}</a>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
</searchbar>